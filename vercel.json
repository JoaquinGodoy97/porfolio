{   
    "functions": {
    "api/server.mjs": {
        "runtime": "nodejs@18.x"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/server.mjs"
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.html"
        }
    ]
}