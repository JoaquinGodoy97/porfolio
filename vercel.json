{
    "builds": [
        {
            "src": "api/server.mjs", 
            "use": "@vercel/node" 
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)", 
            "dest": "/api/server.mjs" 
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.html"
        }
    ]
}