{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server/server.mjs",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "--experimental-modules"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}
